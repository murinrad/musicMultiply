<?xml version="1.0" encoding="utf-8"?>
<org.murinrad.android.musicmultiply.ui.settings.DeviceSettingItem xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.93"
        android:orientation="vertical">

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:text="&lt;NAME>"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/deviceState"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:text=" &lt;STATE>"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <Button
        android:id="@+id/actionBTN"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:text="&lt;ACTION>" />

</org.murinrad.android.musicmultiply.ui.settings.DeviceSettingItem>